{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [ "eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "react/jsx-filename-extension": [
            1,
            {
              "extensions": [
                ".js",
                ".jsx"
              ]
            }
        ],
        "react/jsx-uses-react": 1
    }
}